{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Blog post content type"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "common.tag"
    },
    "infographics": {
      "type": "media",
      "multiple": true,
      "required": false
    },
    "backlinks": {
      "type": "component",
      "repeatable": true,
      "component": "common.backlink"
    },
    "externalLinks": {
      "type": "component",
      "repeatable": true,
      "component": "common.externallink"
    },
    "funnelType": {
      "type": "enumeration",
      "enum": [
        "none",
        "form",
        "ebook",
        "calendar"
      ],
      "default": "none"
    },
    "funnelValue": {
      "type": "string"
    }
  }
}
